<footer class="AD19_Footer">
    {{#with footer}}

        {{! Content }}
        <div class="AD19_Footer_content">

            {{! Socials }}
            <div class="AD19_Footer_content_socials">
                <h2>{{texts.social_media_heading}}</h2>
                <ul>
                    {{#each socials}}
                        <li>
                            <a href="{{this.link.url}}" target="{{this.link.target}}" title="{{this.title}}">
                                <img src="{{img_url this.icon_url}}" alt="{{this.title}}">
                            </a>
                        </li>
                    {{/each}}
                </ul>
            </div>

            {{! Links }}
            {{#each texts.links as |column|}}
            <div class="AD19_Footer_content_links">
                <h2>{{column.header}}</h2>
                <ul>
                    {{#each column.sublinks as |link|}}
                        <li>
                            <a href="{{link.url}}" {{#if link.target}}target="{{link.target}}"{{/if}}>{{link.text}}</a>
                        </li>
                    {{/each}}
                </ul>
            </div>
            {{/each}}
            {{! Award images }}
            <div class="AD19_Footer_content_awards">
                <h2>{{texts.awards}}</h2>
                <div class="AD19_Footer_content_awards-image-wrapper">
                    {{#each images}}
                    <a {{#if this.link.url}}href="{{this.link.url}}"{{/if}} {{#if this.link.target}}target="{{this.link.target}}"{{/if}}>
                        <img src="{{this.url}}" alt="{{this.text}}">
                    </a>
                    {{/each}}
                </div>
            </div>

            {{! Footer copyright text }}
            <div class="AD19_Footer_copyright_text">
                <p>{{{texts.copyright}}}</p>
            </div>

            {{! Footer logo }}
            <div class="AD19_Footer_logo">
                <img src="{{img_url logo_url}}" alt="{{logo_alt}}">
            </div>
        </div>
    {{/with}}
</footer>

