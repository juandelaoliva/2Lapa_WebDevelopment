<picture>
    {{#each image.sources}}
        <source media="{{this.media_query}}" srcset="{{this.url}}">
    {{/each}}

    <img src="{{image.default.url}}" {{#if alt}}alt="{{alt}}"{{/if}} {{#if title}}title="{{title}}"{{/if}}>
</picture>

