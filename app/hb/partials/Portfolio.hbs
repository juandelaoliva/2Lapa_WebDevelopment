<section
        class="Portfolio {{#if optional_classes}}{{optional_classes}}{{/if}} {{#if content.layout}}{{content.layout}}{{/if}}"
        {{#if id}}id="{{id}}"{{/if}}>
    {{#with content}}
        {{#if image_url}}
            <div class="Portfolio_image">
                <img src="{{image_url}}">
            </div>
        {{/if}}
        <div class="Portfolio_content">
            {{#if header}}<h2>{{header}}</h2>{{/if}}
            {{#if copy_text}}
                <div class="Portfolio_content_copy_text">
                    {{{copy_text}}}
                </div>
            {{/if}}
            {{#if link.url}}
                <a class="Portfolio_action_link" href="{{link.url}}" {{#if target}}target="{{link.target}}"{{/if}}>{{link.text}}</a>
            {{/if}}
        </div>
    {{/with}}
</section>

{{!

Description:

Text/Teaser Combination

layout: the position of the image. If not provided, the image is centered.

